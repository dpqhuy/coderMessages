<div class="row padding-top">
    <div class="col-sm-4">
      <h1>New Message</h1>
      <%= form_tag(messages_path, :method => 'post') do %>
                <%= label_tag( nil, "Select Receiver From Your Friend List:") %>
                <% friend_list.each do |friend| %>
                  <div class="form-group">
                    <%= check_box_tag("receiver_ids[]", friend.id) %>
                    <%= label_tag(nil, friend.name) %>
                  </div>
                <% end %>
              <div class="form-group">
                <%= label_tag(:content, "Content:") %>
                <%= text_area_tag 'content', nil, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= submit_tag 'Send', class: 'btn btn-block btn-info' %>
              </div>
          <% end %>
    </div>
    
  </div>